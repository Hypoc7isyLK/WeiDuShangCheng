<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/yuanjiao"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                fresco:roundAsCircle="true"
                android:id="@+id/circlefragment_item_headPic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                app:placeholderImage="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/circlefragment_item_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/circlefragment_item_headPic"

                android:text="nick"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_centerVertical="true"

                android:layout_marginLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/circlefragment_recycle_time"
                android:layout_centerVertical="true"
                android:text="2018/10/28  11 : 43"
                android:layout_alignParentRight="true"
                android:textColor="#666666"
                android:textSize="10sp"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>



        <TextView
            android:id="@+id/circlefragment_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:text="content" />


        <!--<com.facebook.drawee.view.SimpleDraweeView
            fresco:roundedCornerRadius="5dp"
            android:id="@+id/circlefragment_item_image"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:layout_gravity="center_horizontal"/>-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:placeholderImage="@mipmap/common_btn_prise_n_hdpi"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>
            <!--<TextView
                android:id="@+id/circlefragment_item_whetherGreat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="421"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"/>-->

        </RelativeLayout>







    </LinearLayout>

</RelativeLayout>
