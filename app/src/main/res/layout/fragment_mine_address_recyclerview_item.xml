<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/yuanjiao">

        <TextView
            android:id="@+id/mine_adddress_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="李小二"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mine_adddress_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="13884896666"
            android:textColor="#666666"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/retaddress"
            android:layout_width="wrap_content"
            android:layout_below="@+id/mine_adddress_item_name"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/mine_adddress_item_adrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生死看淡和肤色哦好个is建档立卡go一乐山大佛瑟瑟发抖收水电费"
                android:textSize="12sp"
                android:textColor="#666666"/>

            <TextView
                android:layout_below="@id/mine_adddress_item_adrs"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#f2f2f2" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/retaddress"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp">

            <RadioButton
                android:id="@+id/mine_adddress_item_moren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="设为默认地址"
                android:textColor="#666666"
                android:textSize="12sp"
                />

            <Button
                android:id="@+id/mine_adddress_item_updata"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/mine_adddress_item_delete"
                android:layout_centerVertical="true"
                android:background="@drawable/yuanjiao1"
                android:text="修改"
                android:textSize="12sp"
                android:textColor="#666666"/>

            <Button
                android:id="@+id/mine_adddress_item_delete"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/yuanjiao1"
                android:text="删除"
                android:textSize="12sp"
                android:textColor="#666666"/>

        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>