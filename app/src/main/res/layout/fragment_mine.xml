<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/me_bg"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:adjustViewBounds="true"
        android:minHeight="150dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="300dp"
                android:background="@drawable/my_card_bg"
                android:paddingBottom="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mine_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:text="名字"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/mine_layout_Information"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/my_icon_information_n_hdpi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="44dp"
                        android:text="个人资料"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="44dp"
                        android:background="#ededed" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_layout_Circle"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/my_icon_circle_n_hdpi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="44dp"
                        android:text="我的圈子"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="44dp"
                        android:background="#ededed" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_layout_Footprint"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/my_icon_foot_n_hdpi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="44dp"
                        android:text="我的足迹"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="44dp"
                        android:background="#ededed" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_layout_Wallet"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/my_icon_wallet_n_hdpi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="44dp"
                        android:text="我的钱包"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="44dp"
                        android:background="#ededed" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_layout_Address"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/my_icon_address_n_hdpi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="44dp"
                        android:text="我的收货地址"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="44dp"
                        android:background="#ededed" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/mine_setting"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/set" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="44dp"
                        android:text="设置"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="44dp"
                        android:background="#ededed" />

                </RelativeLayout>

            </LinearLayout>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/mine_image_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/line1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-40dp"
                fresco:roundAsCircle="true" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/rela_my_info"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>

</RelativeLayout>